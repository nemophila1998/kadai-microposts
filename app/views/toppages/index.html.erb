<% if logged_in? %>

  <div class="row">
    <aside class="col-sm-4">
      
<%= form_with(model: @micropost, local: true) do |f| %>

        <div class="form-group">
          
<%= f.text_area :content, class: 'form-control', rows: 5 %>

        </div>
        
<%= f.submit '投稿', class: 'btn btn-primary btn-block' %>

      
<% end %>

    </aside>
    <div class="col-sm-8">
      
<%= render 'microposts/microposts', microposts: @microposts %>

    </div>
  </div>
<% else %>

<div class="center jumbotron">
    <div class="text-center">
        <h1>Microposts</h1>
<%= link_to 'アカウント登録', signup_path, class: 'btn btn-lg btn-outline-danger mr-3' %>
<%= link_to 'ログイン', login_path, class: 'btn btn-lg btn-outline-danger' %>
            <p>ゲストアカウント：guest@guest.co.jp／パスワード：guest123</p>
    </div>
</div>

   
<% end %>